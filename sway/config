### Variables
#
# Use command (start) key as prefix.
set $mod Mod4

# Vim bindings for movement.
set $left h
set $down j
set $up k
set $right l

# Used terminal
set $term alacritty

# Application launcher
set $menu dmenu_path | rofi -theme gruvbox-dark-hard -dmenu | xargs swaymsg exec --

# Lockscreen application
set $lock swaylock

# Screenshot application
set $screenshot grim

include screen.config
include monitors.config
include mouse.config
include keyboard.config
include behav.config

exec_always ~/.config/waybar/waybar.sh
